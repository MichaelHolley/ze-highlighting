{
  "name": "ze-highlighting",
  "description": "Chrome-extension for AraCom time-tracking tool",
  "version": "0.3",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "webNavigation"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://zeiterfassung.aracom.de/*"
      ],
      "js": [
        "highlighting.js"
      ]
    }
  ]
}